# Copy this file to .env.development and .env.production
# Dev: fill in dev Supabase URL, leave API keys empty (stubs used)
# Prod: fill in ALL values, set on hosting platform

NODE_ENV="development"

# Database - Use SEPARATE Supabase projects for dev and prod
DATABASE_URL="postgresql://user:password@host:5432/dbname?schema=public"

# JWT
JWT_SECRET="your-jwt-secret-min-32-chars-long"
JWT_EXPIRY="24h"

# Server
PORT=5000
FRONTEND_URL="http://localhost:5173"

# File Storage ("local" for dev, "s3" for prod)
STORAGE_MODE="local"
LOCAL_UPLOAD_DIR="uploads"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET_NAME=""
AWS_REGION="ap-south-1"

# Email (empty = stubbed in dev)
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL=""

# WhatsApp (empty = stubbed in dev)
GUPSHUP_API_KEY=""
GUPSHUP_PHONE_NUMBER=""

# SMS (empty = stubbed in dev)
MSG91_AUTH_KEY=""
